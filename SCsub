# SCsub

Import('env')



env_gdppg = env.Clone()
env_gdppg.add_source_files(env.modules_sources, "*.cpp") # Add all cpp files to the build
env_gdppg.Append(CPPPATH=['ppg-yaml/includes/ppg-core/include']) # this is a path relative to /modules/gdppg/
env_gdppg.Append(LIBPATH=['ppg-yaml/includes/ppg-core/includes','ppg-yaml/includes/thirdparty/yaml-cpp/include/yaml-cpp', 'ppg-yaml/include']) # this is a path relative to /modules/gdppg/
#env.Append(LIBPATH=['#modules/gdppg/ppg-yaml/include]) # this is a path relative to /modules/gdppg/

#env.Append(LIBS=['ppg-yaml'])
# Workaround because scons wants to add the extension .windows.tools.x64.lib
env.Append(LINKFLAGS="ppg-yaml.lib")

env_gdppg.Append(CXXFLAGS=['-std=c++11']) # Flags for C++ code only
