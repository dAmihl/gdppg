# SCsub

Import('env')



env_gdppg = env.Clone()
env_gdppg.add_source_files(env.modules_sources, "*.cpp") # Add all cpp files to the build
env_gdppg.Append(CPPPATH=['ppg-core/include']) # this is a path relative to /modules/gdppg/
env_gdppg.Append(LIBPATH=['#modules/gdppg/ppg-core/lib']) # this is a path relative to /modules/gdppg/
env.Append(LIBPATH=['#modules/gdppg/ppg-core/lib']) # this is a path relative to /modules/gdppg/
#env.Append(LIBS=['ppg-core'])
# Workaround because scons wants to add the extension .windows.tools.x64.lib
env.Append(LINKFLAGS="ppg-core.lib")

env_gdppg.Append(CXXFLAGS=['-std=c++11']) # Flags for C++ code only