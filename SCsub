# SCsub

Import('env')

env.add_source_files(env.modules_sources, "*.cpp") # Add all cpp files to the build
env_gdppg = env.Clone()
env_gdppg.Append(CPPPATH=["ppg-core/include"]) # this is a path relative to /modules/gdppg/
env_gdppg.Append(LIBPATH=['ppg-core/lib']) # this is a path relative to /modules/gdppg/
env_gdppg.Append(LIBS=['ppg-core'])